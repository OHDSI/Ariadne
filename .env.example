# --- Database Configuration ---
VOCAB_CONNECTION_STRING=postgresql+psycopg://my_user:my_password@my_server.com/vocabulary
VOCAB_SCHEMA=public
VOCAB_VECTOR_TABLE=concept_vector

# --- GenAI Configuration ---
# Options: 'openai', 'azure', 'lm-studio'
GENAI_PROVIDER=azure
LLM_MODEL=o3
LLM_API_KEY=your_key_here
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_API_KEY=your_key_here

# Required if LLM_PROVIDER is 'azure'
AZURE_LLM_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_EMBEDDING_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Required if LLM_PROVIDER is 'lm-studio'
LM_STUDIO_ENDPOINT=http://localhost:1234/v1


